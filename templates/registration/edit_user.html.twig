{% extends 'base.html.twig' %}

{% block title %}Modification du profil utilisateur{% endblock %}

{% block body %}
<section class="container">
    <div class="row">
        <div class="col">
            <h1>Modification du profil utilisateur</h1>

            {{ form_start(registrationForm) }}
                <fieldset class="mb-3">
                    <legend>Mon identit√©</legend>
                    {{ form_row(registrationForm.nickname) }}
                    {{ form_row(registrationForm.email) }}
                </fieldset>

                {{ form_row(registrationForm.plainPassword, {
                    label: 'Mot de passe'
                }) }}
                {{ form_row(registrationForm.RGPDConsent) }}

                <button type="submit" class="btn btn-primary btn-lg my-3">Sauvegarder</button>
            {{ form_end(registrationForm) }}        
        </div>
    </div>
</section>

{% endblock %}
